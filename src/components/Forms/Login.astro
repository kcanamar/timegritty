<div class="userform-container">
    <form class="login-form" action="/api/login" method="POST">
        <h2>Login</h2>
        <div class="form-group">
            <label for="login-email">Email</label>
            <input
                type="email"
                name="email"
                id="login-email"
                required
                autocomplete="email"
                placeholder="Enter your email"
            />
        </div>
        <div class="form-group">
            <label for="login-password">Password</label>
            <input
                type="password"
                name="password"
                id="login-password"
                placeholder="Password please"
                required
                autocomplete="current-password"
                minlength="6"
                maxlength="32"
            />
        </div>
        <button type="submit" class="login-btn">Submit</button>
        <p class="signup-link">
            Don't have an account? <a href="/signup">Sign Up</a>
        </p>
        <p class="password-link">
            Maybe you <a href="/password">Forgot your password?</a>
        </p>
    </form>
</div>

<style is:global>
    .darkmode #login-email,
    .darkmode #login-password {
        background-color: var(--neutral-800);
    }
    .userform-container {
        width: 100%;
        margin: auto;
        max-width: 400px;
        padding: 2rem;
        border-radius: 8px;
        background-color: var(--neutral-700);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .login-form {
        display: flex;
        flex-direction: column;
    }

    .login-form h2 {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--neutral-600);
    }

    .form-group input {
        width: 100%;
        padding: 0.75rem;
        border-radius: var(--radius-small);
        font-size: 1rem;
    }


    .login-btn {
        width: 100%;
        padding: 0.75rem;
        border: none;
        border-radius: var(--radius-small);
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .signup-link, .password-link {
        text-align: center;
        margin-top: 1rem;
    }

    .signup-link a, .password-link a {
        color: var(--secondary-300);
    }
    @media screen and (max-width: 480px) {
        .userform-container {
            width: 100%;
            padding: 1.5rem;
        }
    }
</style>
